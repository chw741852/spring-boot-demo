<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <!--<Property name="log_pattern">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>-->
        <Property name="log_pattern">%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%wEx</Property>
        <!-- 日志文件大小 -->
        <Property name="file_size">10MB</Property>
        <Property name="logfile_path">target/logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 输出trace及以上级别的信息（onMatch），其他拒绝（onMismatch） -->
            <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
        </Console>

        <!-- 输出trace及以上级别的日志到指定文件，最大10M，warn、error除外 -->
        <RollingFile name="app_trace" fileName="${logfile_path}/app_trace.log" filePattern="${logfile_path}/app_trace-%d{yyyy-MM-dd}-%i.log.gz">
            <SizeBasedTriggeringPolicy size="${file_size}"/>
            <PatternLayout pattern="${log_pattern}"/>
            <Filters>
                <!-- 拒绝输出warn及以上 -->
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <!-- 输出trace及以上 -->
                <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!-- 输出warn及以上级别的日志到指定文件 -->
        <RollingFile name="app_warn" fileName="${logfile_path}/app_warn.log" filePattern="${logfile_path}/app_warn-%d{yyyy-MM-dd}-%i.log.gz">
            <SizeBasedTriggeringPolicy size="${file_size}"/>
            <PatternLayout pattern="${log_pattern}"/>
            <!-- 输出warn及以上 -->
            <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>
    </Appenders>
    <loggers>
        <!-- TODO springboot中日志级别是根据这里设置的，appender里面设置的好像不起作用，待研究，打印到文件中，有乱码 -->
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="app_trace"/>-->
            <!--<AppenderRef ref="app_warn"/>-->
        </Root>
    </loggers>
</Configuration>